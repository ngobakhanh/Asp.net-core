@{
    Layout = "~/Views/Home/_Layout.cshtml";
}

@model ServiceReference_Item.Item
<div id="all">
    <div id="content">
        <div class="container">

            <div class="col-md-12">
                <ul class="breadcrumb">
                    <li>
                        <a href="#">Home</a>
                    </li>
                    <li>Contact Supplier</li>
                </ul>
            </div>

            <div class="col-md-12" id="basket">
                <div class="box">

                    <form>

                        <h1>Contact Supplier</h1>
                        <p class="text-muted"><i class="fa fa-user"></i>&nbsp; @Model.Supplier.CompanyName</p>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th colspan="2">Product</th>
                                        <th>Quantity</th>
                                        <th>Unit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td style="width: 100px">
                                            <a href="#">
                                                <img src="~/images/@Model.ImageItem" alt="White Blouse Armani">
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-controller="Home" asp-action="Itemdetail" asp-route-id="@Model.ItemId" asp-route-cateId="@Model.CategoryId">@Model.ItemName</a>
                                            <input type="text" name="itemId" id="itemId" class="hidden" value="@Model.ItemId"/>
                                        </td>
                                        <td>
                                            <input type="number" asp-for="@Model.MinQuantity" value="@Model.MinQuantity" class="form-control">
                                            <input type="text" id="quantity" value="@Model.MinQuantity" name="quantity" class="hidden"/>
                                        </td>
                                        <td style="width: 150px">
                                            <select asp-for="@Model.UnitId" asp-items="@(new SelectList((ServiceReference_Unit.Unit[]) ViewBag.Units,"UnitId","UnitName"))" class="form-control">
                                            </select>
                                        </td>
                                    </tr>
                                </tbody>

                            </table>
                        </div>
                        <p class="text-muted "><small><span style="color: #f00">*</span> Message: Enter product details such as color, size, materials etc. and other specific requirements to receive an accurate quote.</small></p>
                        <div>
                            <textarea  name="comment" id="comment" cols="80"></textarea>
                        </div>
                        <!-- /.table-responsive -->
                        <div class="box-footer">
                            <div class="pull-right">
                                <button id="sendInquiry" type="button" class="btn btn-primary btn-lg">
                                    Send Inquiry Now <i class="fa fa-chevron-right"></i>
                                </button>
                            </div>
                        </div>

                    </form>

                </div>
                <!-- /.box -->
            </div>
            <!-- /.col-md-12 -->

        </div>
        <!-- /.container -->
    </div>
    <!-- /#content -->
</div>
