@using System.Globalization
@model ServiceReference_Invoice.Invoice
@{
    Layout = "~/Views/Home/_Layout.cshtml";
}


<div id="all">

    <div id="content">
        <div class="container">

            <div class="col-md-12">
                <ul class="breadcrumb">
                    <li>
                        <a href="#">Home</a>
                    </li>
                    <li>Checkout - Payment method</li>
                </ul>
            </div>

            <div class="col-md-9" id="checkout">

                <div class="box">
                    <form method="post" asp-controller="Wholesaler" asp-action="Checkout3">
                        <h1>Checkout - Payment method</h1>
                        <ul class="nav nav-pills nav-justified">
                            <li>
                                <a asp-controller="Wholesaler" asp-action="checkout1" asp-route-id="@Model.InvoiceId"><i class="fa fa-map-marker"></i><br>Address</a>
                            </li>
                            <li>
                                <a asp-controller="Wholesaler" asp-action="checkout2" asp-route-id="@Model.InvoiceId"><i class="fa fa-truck"></i><br>Delivery Method</a>
                            </li>
                            <li class="active">
                                <a href="#"><i class="fa fa-money"></i><br>Payment Method</a>
                            </li>
                            <li class="disabled">
                                <a href="#"><i class="fa fa-eye"></i><br>Order Review</a>
                            </li>
                        </ul>

                        <div class="content">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="box payment-method">

                                        <h4>Paypal</h4>

                                        <p>We like it all.</p>

                                        <div class="box-footer text-center">

                                            <input type="radio" asp-for="@Model.PaymentMethodId" value="1">
                                            <input type="text" asp-for="@Model.InvoiceId" class="hidden" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="box payment-method">

                                        <h4>Payment gateway</h4>

                                        <p>VISA and Mastercard only.</p>

                                        <div class="box-footer text-center">

                                            <input type="radio" asp-for="@Model.PaymentMethodId" value="2">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="box payment-method">

                                        <h4>Cash on delivery</h4>

                                        <p>You pay when you get it.</p>

                                        <div class="box-footer text-center">

                                            <input type="radio" asp-for="@Model.PaymentMethodId" value="3">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.row -->

                        </div>
                        <!-- /.content -->

                        <div class="box-footer">
                            <div class="pull-left">
                                <a asp-controller="Wholesaler" asp-action="checkout2" asp-route-id="@Model.InvoiceId" class="btn btn-default"><i class="fa fa-chevron-left"></i>Back to Shipping method</a>
                            </div>
                            <div class="pull-right">
                                <button type="submit" class="btn btn-primary">
                                    Continue to Order review<i class="fa fa-chevron-right"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.box -->


            </div>
            <!-- /.col-md-9 -->

            <div class="col-md-3">

                <div class="box" id="order-summary">
                    <div class="box-header">
                        <h3>Order summary</h3>
                    </div>
                    <p class="text-muted">Shipping and additional costs are calculated based on the values you have entered.</p>

                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>Order subtotal</td>
                                    <th>@(((double)(Model.Total - Model.ShipFee)).ToString("C0", new CultureInfo("en-US")))</th>
                                </tr>
                                <tr>
                                    <td>Shipping and handling</td>
                                    <th>@(((double)Model.ShipFee).ToString("C0", new CultureInfo("en-US")))</th>
                                </tr>
                                <tr class="total">
                                    <td>Total</td>
                                    <th>@(((double)Model.Total).ToString("C0", new CultureInfo("en-US"))) </th>
                                </tr>
                            </tbody>
                        </table>
                    </div>


                </div>

            </div>
            <!-- /.col-md-3 -->

        </div>
        <!-- /.container -->
    </div>
    <!-- /#content -->
</div>
<!-- /#all -->
