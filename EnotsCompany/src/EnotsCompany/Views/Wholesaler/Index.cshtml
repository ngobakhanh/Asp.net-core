@using System.Globalization
@model List<ServiceReference_Invoice.Invoice>
@{
    Layout = "~/Views/Home/_Layout.cshtml";
}

<div id="all">

    <div id="content">
        <div class="container">

            <div class="col-md-12">

                <ul class="breadcrumb">
                    <li>
                        <a href="#">Home</a>
                    </li>
                    <li>My orders</li>
                </ul>

            </div>

            <div class="col-md-3">
               @Html.Partial("~/Views/Wholesaler/_LeftMenu.cshtml")
            </div>

            <div class="col-md-9" id="customer-orders">
                <div class="box">
                    <h1>My orders</h1>

                    <p class="lead">Your orders on one place.</p>
                    <p class="text-muted">If you have any questions, please feel free to <a href="contact.html">contact us</a>, our customer service center is working for you 24/7.</p>

                    <hr>

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Order</th>
                                    <th>Date</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    @foreach (var i in Model)
                                    {
                                        <tr>
                                            <th># @i.InvoiceId</th>
                                            <td>@(((DateTime)i.InvoiceDate).ToString("dd-MM-yyyy"))</td>
                                            <td>@(((double)i.Total).ToString("C0",new CultureInfo("en-Us")))</td>
                                            <td>
                                                <span class="label label-info">@i.Status</span>
                                            </td>
                                            <td>
                                                <a asp-controller="Wholesaler" asp-action="Checkout1" asp-route-id="@i.InvoiceId" class="btn btn-primary btn-sm" data-row="@i.InvoiceId">Checkout</a>
                                            </td>
                                        </tr>
                                        //invoice detail
                                    }
                                }
                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->
    </div>
    <!-- /#content -->
</div>