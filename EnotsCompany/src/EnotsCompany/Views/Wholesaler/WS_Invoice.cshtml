@{
    Layout = "~/Views/Home/_Layout.cshtml";
}
@model ServiceReference_PurchaseOrder.PurchaseOrder[]

<div id="all">

    <div id="content">
        <div class="container">

            <div class="col-md-12">

                <ul class="breadcrumb">
                    <li>
                        <a href="#">Home</a>
                    </li>
                    <li>My orders</li>
                </ul>

            </div>

            <div class="col-md-3">
                <div class="panel panel-default sidebar-menu">

                    <div class="panel-heading">
                        <h3 class="panel-title">Customer section</h3>
                    </div>

                    <div class="panel-body">

                        <ul class="nav nav-pills nav-stacked">
                            <li class="active">
                                <a href="customer-orders.html"><i class="fa fa-list"></i> My orders</a>
                            </li>
                            <li>
                                <a href="customer-wishlist.html"><i class="fa fa-heart"></i> My wishlist</a>
                            </li>
                            <li>
                                <a href="customer-account.html"><i class="fa fa-user"></i> My account</a>
                            </li>
                            <li>
                                <a href="index.html"><i class="fa fa-sign-out"></i> Logout</a>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>

            <div class="col-md-9" id="customer-orders">
                <div class="box">
                    <h1>My orders</h1>

                    <p class="lead">Your orders on one place.</p>
                    <p class="text-muted">If you have any questions, please feel free to <a href="contact.html">contact us</a>, our customer service center is working for you 24/7.</p>

                    <hr>

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Order</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in Model)
                                {
                                    <tr>
                                        <th># @p.PurchaseOrderId</th>
                                        <td>@p.InquiriedData.ToString("dd-MM-yyyy")</td>
                                        <td>
                                            <span class="label label-info">@p.StatusPurchase</span>
                                        </td>
                                        <td>
                                            <a href="customer-order.html" class="btn btn-primary btn-sm view-detail-order" data-row="@p.PurchaseOrderId">View</a>
                                        </td>
                                    </tr>
                                    <tr id="row-@p.PurchaseOrderDetails" style="display:none;">
                                        <td colspan="5">
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th colspan="2">Product</th>
                                                        <th>Quantity</th>
                                                        <th>Unit price</th>
                                                        <th>Discount</th>
                                                        <th>Total</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td style="width:90px">
                                                            <a href="#">
                                                                <img src="~/images/mainboard-asus-h110m-d-d3(1).jpg" alt="White Blouse Armani" class="img-responsive">
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a href="#">White Blouse Armani</a>
                                                        </td>
                                                        <td></td>
                                                        <td>$123.00</td>
                                                        <td>$0.00</td>
                                                        <td>$246.00</td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <a href="#">
                                                                <img src="img/basketsquare.jpg" alt="Black Blouse Armani" class="img-responsive">
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a href="#">Black Blouse Armani</a>
                                                        </td>
                                                        <td>1</td>
                                                        <td>$200.00</td>
                                                        <td>$0.00</td>
                                                        <td>$200.00</td>
                                                    </tr>
                                                </tbody>

                                            </table>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->
    </div>
    <!-- /#content -->
</div>
<script src="~/client/js/jquery-1.11.0.min.js"></script>
<script type="text/javascript">
        $(document).ready(function() {
            $('.view-detail-order').click(function(e) {
                e.preventDefault();
                var id = $(this).data('row');
                $("#row-" + id).toggle();
            });
        })
</script>