<div class="page-content-inner">
    <!-- Start .page-content-inner -->
    <div id="page-header" class="clearfix">
        <div class="page-header">
            <h2>Roles Management</h2>
            @*<span class="txt">Load data from api or dynamic via ajax</span>*@
        </div>
    </div><!-- Start .row -->
    <div class="row">
        <div class="col-lg-12">
            <!-- col-lg-12 start here -->
            <div class="panel panel-default plain toggle">
                <!-- Start .panel -->
                <div class="panel-body">
                    <label class="col-lg-2 col-md-3 control-label" for="">Role name</label>
                    <div class="col-lg-4 col-md-9">
                        <input type="text" required id="role" class="form-control">
                    </div>
                    <div class="col-lg-2 col-md-9">
                        <button type="button" id="add-role" class="btn btn-primary"> Add new role</button>
                    </div>
                </div>
            </div>
            <!-- End .panel -->
        </div>
        <!-- col-lg-12 end here -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default plain toggle">
             <div class="panel-body">
                    <table id="basic-datatables" class="table table-striped table-bordered" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th style="text-align:right">Action</th>
                            </tr>
                        </thead>
                        <tbody id="table-role">
                            @{ 
                                int stt = 1;
                            }
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>@stt</td>
                                    <td>@role.Name </td>
                                   <td>
                                       <button type="button" class="btn btn-danger pull-right delete-role" data-row="@role.Name"><i class="fa fa-trash-o"></i></button>
                                       @*<button type="button" class="btn btn-primary pull-right edit-role" data-row="@role.Name"><i class="fa fa-edit"></i></button>*@
                                    </td>
                                </tr>
                                stt++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>