@model EnotsCompany.Models.CategoryModel
<div class="page-content-inner">
    <!-- Start .page-content-inner -->
    <form asp-action="CategorySave" asp-controller="Admin" enctype="multipart/form-data" class="form-horizontal group-border stripped">
        <div id="page-header" class="clearfix">
            <div class="page-header">
                <h2>Categories</h2>
                @*<span class="txt">Load data from api or dynamic via ajax</span>*@
            </div>
            <div class="header-stats">
                <button type="submit" class="btn btn-info"><i class="fa fa-save"></i></button>
                <a asp-action="CategoryIndex" asp-controller="Admin"><i class="btn btn-info fa fa-mail-reply"></i></a>
            </div>
        </div>
        <div class="@(ViewBag.flag == "success" ? "alert alert-success fade in" : ViewBag.flag == "error" ? "alert alert-danger fade in" : "hidden")">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-check alert-icon "></i>
            @ViewBag.message
        </div>
        <div class="row">
            <div class="col-lg-12">
                <!-- col-lg-12 start here -->
                <div class="panel panel-default plain toggle">
                    <!-- Start .panel -->
                    <div class="panel-heading">
                        <h4 class="panel-title">Create new category</h4>
                    </div>
                    <div class="panel-body pt0 pb0">
                        <div class="form-group hidden">
                            <label class="col-lg-2 col-md-3 control-label" for="">Category Id</label>
                            <div class="col-lg-10 col-md-9">
                                <input type="text" class="form-control" readonly asp-for="@Model.CategoryId">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-2 col-md-3 control-label">Category name</label>
                            <div class="col-lg-10 col-md-9">
                                <input type="text" class="form-control required" required asp-for="@Model.CategoryName">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-2 col-md-3 control-label" for="">Image upload</label>
                            <div class="col-lg-10 col-md-9">
                                <input type="file" class="filestyle" data-buttonText="Find file" data-buttonName="btn-danger" data-iconName="fa fa-plus" name="files" id="files" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-2 col-md-3 control-label" for="">Parent</label>
                            <div class="col-lg-10 col-md-9">
                                <select class="form-control" asp-for="@Model.ParentId" asp-items="@(new SelectList(Model.categories,"CategoryId","CategoryName"))">
                                    <option>Select parent category</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-2 col-md-3 control-label">Status</label>
                            <div class="col-lg-10 col-md-9">
                                <div class="radio-custom">
                                    <input type="radio" value="Enable" checked="checked" id="radio1" asp-for="@Model.StatusCate">
                                    <label for="radio1">Enable</label>
                                </div>
                                <div class="radio-custom">
                                    <input type="radio" value="Disable" id="radio2" asp-for="@Model.StatusCate">
                                    <label for="radio2">Disable</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>