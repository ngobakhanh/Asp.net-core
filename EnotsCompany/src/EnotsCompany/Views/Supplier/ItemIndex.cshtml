<div class="page-content-inner">
    <!-- Start .page-content-inner -->
    <div id="page-header" class="clearfix">
        <div class="page-header">
            <h2>Items</h2>
            @*<span class="txt">Load data from api or dynamic via ajax</span>*@
        </div>
        <div class="header-stats">
            <div class="spark clearfix">
                <a asp-action="ItemCreate" asp-controller="Supplier"><i class="btn btn-info fa fa-plus"></i></a>
            </div>
        </div>
    </div>
    <!-- Start .row -->
    <div class="row">
        <div class="col-lg-12">
            <!-- col-lg-12 start here -->
            <div class="panel panel-default toggle"> 
                <div class="panel-heading">
                    <h2 class="panel-title">List of items</h2>
                </div>
                <div class="panel-body">
                    <table id="responsive-datatables" class="table table-bordered table-striped table-hover dt-responsive non-responsive" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Item Name</th>
                                <th>Price</th>
                                <th>Category</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img src="~/images/@item.ImageItem" width="50px" /></td>
                                    <td>@item.ItemName</td>
                                    @*<td>@item.DescriptionItem.Replace(item.DescriptionItem.Substring(50),"...")</td>*@
                                    <td>@item.Price</td>
                                    <td>@item.Category.CategoryName</td>
                                    <td>@item.StatusItem</td>
                                    <td>
                                        <a asp-action="ItemEdit" asp-controller="Supplier" asp-route-id="@item.ItemId"><i class="btn btn-info fa fa-edit"></i></a>
                                        <a asp-action="ItemDelete" asp-controller="Supplier" asp-route-id="@item.ItemId" class="delete"><i class="btn btn-info fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- End .panel -->
        </div>
        <!-- col-lg-12 end here -->
    </div>
    <!--end row-->
</div>
