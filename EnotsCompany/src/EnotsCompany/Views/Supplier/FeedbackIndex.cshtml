@model ServiceReference_Feedback.Feedback[]
<div class="page-content-inner">
    <!-- Start .page-content-inner -->
    <div id="page-header" class="clearfix">
        <div class="page-header">
            <h2>Feedbacks</h2>
            @*<span class="txt">Load data from api or dynamic via ajax</span>*@
        </div>
    </div>
    <!-- Start .row -->
    <div class="row">
        <div class="col-lg-12">
            <!-- col-lg-12 start here -->
            <div class="panel panel-default toggle panelMove panelClose panelRefresh">
                <!-- Start .panel -->
                <div class="panel-heading">
                    <h2 class="panel-title">List of feedbacks</h2>
                </div>
                <div class="panel-body">
                    <table id="responsive-datatables" class="table table-bordered table-striped table-hover dt-responsive non-responsive" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Subject</th>
                                <th>Wholesaler</th>
                                <th>Supplier</th>
                                <th>Item</th>
                                <th>Content</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SubjectFB</td>
                                    @*<td>@item.DescriptionItem.Replace(item.DescriptionItem.Substring(50),"...")</td>*@
                                    <td>@item.Wholesaler.Fullname</td>
                                    <td>@item.Supplier.CompanyName</td>
                                    <td>@item.Item.ItemName</td>
                                    <td>@item.Message</td>
                                    <td>
                                        <a asp-action="FeedbackDetail" asp-controller="Supplier" asp-route-id="@item.ID"><i class="btn btn-info fa fa-eye-slash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- End .panel -->
        </div>
        <!-- col-lg-12 end here -->
    </div>
    <!--end row-->
</div>
