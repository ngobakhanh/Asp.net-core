@model ServiceReference_Invoice.Invoice[]
<div class="page-content-inner">
    <!-- Start .page-content-inner -->
    <div id="page-header" class="clearfix">
        <div class="page-header">
            <h2>Invoices</h2>
            @*<span class="txt">Load data from api or dynamic via ajax</span>*@
        </div>
        <div class="header-stats">
            <div class="spark clearfix">
                <a asp-action="ItemCreate" asp-controller="Supplier"><i class="btn btn-info fa fa-plus"></i></a>
            </div>
        </div>
    </div>
    <!-- Start .row -->
    <div class="row">
        <div class="col-lg-12">
            <!-- col-lg-12 start here -->
            <div class="panel panel-default toggle panelMove panelClose panelRefresh">
                <!-- Start .panel -->
                <div class="panel-heading">
                    <h2 class="panel-title">List of items</h2>
                </div>
                <div class="panel-body">
                    <table id="responsive-datatables" class="table table-bordered table-striped table-hover dt-responsive non-responsive" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Address</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                <tr>

                                    @*<td>@item.DescriptionItem.Replace(item.DescriptionItem.Substring(50),"...")</td>*@
                                    <td>@i.InvoiceId</td>
                                    <td>@i.ShipAddress</td>
                                    <td>@i.InvoiceDate</td>
                                    <td>
                                        <a asp-action="ItemEdit" asp-controller="Supplier" asp-route-id="@i.InvoiceId"><i class="btn btn-info fa fa-edit"></i></a>
                                        <a asp-action="ItemDelete" asp-controller="Supplier" asp-route-id="@i.InvoiceId"><i class="btn btn-info fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- End .panel -->
        </div>
        <!-- col-lg-12 end here -->
    </div>
    <!--end row-->
</div>
